<header class="header">
  <div class = "header-filter">
    <div class = "nav">
      <div class="nav_left">
        <%= link_to image_tag("Picnicar.jpeg", class: "logo"), root_path %>
        <%= link_to "Picnicarとは？", root_path, class: "nav_button" %>
        <%= link_to "店舗を登録する", root_path, class: "nav_button" %>
        <%= link_to "お問い合わせ", root_path, class: "nav_button" %>
      </div>
      <%# ログインしているときは以下、とりまさせないでおく %>
      <div class="nav_right">
        <% if user_signed_in? %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav_button %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: :nav_button %>
          <%= link_to "新規登録", new_user_registration_path, class: :nav_button %>
        <% end %>
      </div>
      <%# ログインしていないときは上記を表示、今はこっちやな %>
    </div>
  </div>
</header>